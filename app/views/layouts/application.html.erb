<!DOCTYPE html>
<html>
  <head>
    <title>FlowOverstack</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= form_tag questions_path, method: :get do %>
        <div>
          <%= text_field_tag :search, params[:search], placeholder: "Buscar" %>
        </div>
        <div>
          <%= link_to "Registrarme", new_user_registration_path %>
          <%= link_to "Ingresar", new_user_session_path %>
        </div>
      <% end %>
    </nav>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>

    <% if flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>

    <%= yield %>

  </body>
</html>
