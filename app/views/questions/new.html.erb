<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h1>Preguntar</h1>

    <% if @question.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @question.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Preguntar" %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, class: "form-control", placeholder: "DescripciÃ³n", rows: "5" %>
      </div>
      <div>
        <%= f.submit "Preguntar", class: "btn btn-primary pull-right" %>
      </div>
    <% end %>
  </div>
</div>
